{
  "name": "wavves-clean-architecture",
  "version": "0.0.1",
  "description": "",
  "author": "RAUL VLS",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=PROD nest start",
    "start:dev": "NODE_ENV=DEV yarn seed && NODE_ENV=DEV nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "seed": "ts-node-transpile-only src/infra/seed/index.ts",
    "clear-jest-cache": "jest --clearCache",
    "test": "NODE_ENV=TEST jest --verbose --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=TEST jest --watch --verbose --detectOpenHandles",
    "test:cov": "NODE_ENV=TEST jest --detectOpenHandles --testTimeout=90000 -i --forceExit --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.1.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "7.10.6",
    "@nestjs/platform-express": "7.6.15",
    "apollo-server-core": "2.24.0",
    "apollo-server-express": "2.24.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "graphql": "15.5.0",
    "graphql-tools": "^7.0.5",
    "graphql-type-json": "^0.3.2",
    "mongodb": "3.6.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/axios": "^0.0.8",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/mongodb": "3.6.20",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}